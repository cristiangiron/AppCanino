<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:stretchColumns="*">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/margin_button"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_left"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textto"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/reservacionp"
                android:textColor="@color/color_parallax"
                android:textSize="@dimen/textdimen"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textfecha"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/splash"
                app:layout_constraintRight_toLeftOf="@+id/guideline2"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/margin_left"
                app:layout_constraintTop_toBottomOf="@+id/textto"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/margin_left" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/dimen"
                android:layout_height="@dimen/titulo"
                app:srcCompat="@drawable/ic_today"
                android:layout_marginLeft="@dimen/margin_left"
                app:layout_constraintLeft_toLeftOf="@+id/guideline2"
                android:layout_marginTop="@dimen/margin_left"
                app:layout_constraintTop_toBottomOf="@+id/textto"
                android:layout_marginStart="@dimen/margin_left"/>

            <TextView
                android:id="@+id/textfecha"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/inforeservar"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintLeft_toRightOf="@+id/imageView6"
                tools:text="@string/inforeservar"
                android:layout_marginRight="@dimen/margin_left"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/dimen"
                android:layout_height="@dimen/dimen"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:srcCompat="@drawable/ic_time"
                app:layout_constraintLeft_toLeftOf="@+id/guideline2"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"/>

            <TextView
                android:id="@+id/texthora"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/inforeservar"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintLeft_toRightOf="@+id/imageView8"
                tools:text="@string/inforeservar"
                android:layout_marginRight="@dimen/margin_left"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"/>

            <Button
                android:id="@+id/btnAceptar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="@dimen/ancho_boton"
                android:layout_height="@dimen/dimen_heightb"
                android:text="@string/aceptar"
                tools:text="@string/aceptar"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textLugar"
                android:layout_marginRight="@dimen/margin_left"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/margin_left"
                app:layout_constraintLeft_toLeftOf="@+id/guideline2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                android:layout_marginBottom="@dimen/margin_left" />

            <TextView
                android:id="@+id/textLugar"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:text="@string/namereserva"
                tools:text="@string/namereserva"
                app:layout_constraintLeft_toRightOf="@+id/imageView13"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="@+id/imageView13"
                android:layout_marginBottom="@dimen/margin_left" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_location_on"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                android:layout_marginLeft="@dimen/margin_left"
                app:layout_constraintLeft_toLeftOf="@+id/guideline2"
                android:layout_marginStart="@dimen/margin_left"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                app:layout_constraintGuide_begin="231dp"
                android:orientation="vertical" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>