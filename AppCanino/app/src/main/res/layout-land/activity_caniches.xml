<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristiangiron.appcanino.Marcadores.Caniches">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/margin_width"
                android:layout_height="@dimen/margin_height"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:contentDescription="@string/caniches"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                app:srcCompat="@drawable/ic_dog" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/margin_width"
                android:layout_height="@dimen/margin_height"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:contentDescription="@string/tel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:srcCompat="@drawable/ic_dog" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:contentDescription="@string/horario"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:srcCompat="@drawable/ic_dog" />

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_button"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:contentDescription="@string/canichesdireccion"
                android:text="@string/canichesdireccion"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/imageView3"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/canichesdireccion" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:contentDescription="@string/telefono_01"
                android:text="@string/telefono_01"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/imageView5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNombre"
                tools:text="@string/telefono_01" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:contentDescription="@string/horario"
                android:text="@string/horario"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/imageView7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:text="@string/horario" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:text="@string/res"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/color_res"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                tools:text="@string/res" />

            <Button
                android:id="@+id/bfecha"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="@dimen/dimen_button"
                android:layout_height="@dimen/dimen_heightb"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_left"
                android:text="@string/date"
                app:layout_constraintBottom_toTopOf="@+id/bhora"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.508"
                tools:text="@string/date"
                />

            <Button
                android:id="@+id/bhora"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="@dimen/dimen_button"
                android:layout_height="@dimen/dimen_heightb"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:text="@string/time_1"
                app:layout_constraintBottom_toTopOf="@+id/btnguardar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/efecha"
                tools:text="@string/time_1"
                android:layout_marginTop="@dimen/margin_left"
                android:layout_marginBottom="@dimen/margin_width"
                app:layout_constraintVertical_bias="0.489" />

            <EditText
                android:id="@+id/efecha"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/bfecha"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/bfecha"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginBottom="-1dp" />

            <EditText
                android:id="@+id/ehora"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/bhora"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/bhora"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/btnguardar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="@dimen/margin_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_button"
                android:layout_marginEnd="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:text="@string/Res_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/Res_1" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.19" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:layout_marginBottom="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:text="@string/peluqueria01"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/peluqueria01"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0" />




        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
            app:contentScrim="@color/color_parallax"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:title="@string/caniches">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/caniches"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                />

        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@drawable/ic_favorite" />


</android.support.design.widget.CoordinatorLayout>
